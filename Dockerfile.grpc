FROM golang:1.24 AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Update path to match your structure
RUN CGO_ENABLED=0 GOOS=linux go build -o grpc-server ./cmd/grpc-server

FROM alpine:3.19

WORKDIR /app

COPY --from=builder /app/grpc-server ./grpc-server

EXPOSE 50051

CMD ["./grpc-server"]
